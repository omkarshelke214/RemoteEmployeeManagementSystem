@model IEnumerable<RemoteEmpoyeeManagementSystem.Models.EmpAttendace>
<div class="container mb-3">
    <div class="container-lg">
        <h3>Mark Attendance</h3>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Id</th>
            <th scope="col">In time</th>
            <th scope="col">Out Time</th>
            <th scope="col">Attendance id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attdc in Model)
        {

            <tr>
                <td scope="row">@attdc.EmpName</td>
                <td>@attdc.EmpId</td>
                <td>@attdc.InTime</td>
                <td>@attdc.OutTime</td>
                <td>@attdc.AttendanceId</td>
            </tr>
        }
    </tbody>
    <div class="container">
        <div class="row">
            <form asp-controller="Attendance" asp-action="MarkAttedance" method="post">
                <label for="Userid" class="form-label">Click Below To mark Attendance</label>
                    
                <div class="mx-auto" style="width: 700px;" @Html.DisabledIf(@Model.LastOrDefault().IsChckInDisabled)>
                    <div class="bg-secondary text-white p-2">
                        <button type="submit" class="btn btn-primary form-control" >Check In</button>
                    </div>
                </div>
                <div class="mx-auto" style="width: 700px;" @Html.DisabledIf(@Model.LastOrDefault().IschckOutDisabled)>
                    <div class="bg-secondary text-white p-2">
                        <button type="submit" class="btn btn-primary form-control">Check Out</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</table>